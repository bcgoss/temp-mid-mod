<div class='<%=link.js_class%> col-md-4' data-id="<%=link.id%>" id="link-<%=link.id%>" style="border: 1px solid">
  <p class='link-title'><%= link.title %></p>
  <p class='link-url'><%= link.url %></p>

  <p class="link_read">
    <%= link.read %>
  </p>
  <p class="link_buttons">
    <% if link.read? %>
      <%= button_tag 'Mark as Unread', class: 'mark-unread' %>
    <% else %>
      <%= button_tag 'Mark as Read', class: 'mark-read' %>
    <% end %>
    <button class='edit-link'><%= link_to 'Edit', edit_link_path(link) %></button>
    <button class='delete-link'>Delete</button>
  </p>
</div>
